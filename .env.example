# API Configuration
# Set to 'true' to use Next.js API routes, 'false' to use external backend
NEXT_PUBLIC_USE_NEXT_API=true

# External Backend URL (only used if NEXT_PUBLIC_USE_NEXT_API is false)
NEXT_PUBLIC_API_URL=http://localhost:8080/api

# JWT Secret (for token generation in Next.js API routes)
# Generate a secure random string for production
JWT_SECRET=your-secret-key-here-change-in-production

# Supabase Configuration (Recommended - Free PostgreSQL + File Storage)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Alternative: Direct PostgreSQL Connection (if using Neon or other PostgreSQL)
# DATABASE_URL=postgresql://user:password@host.neon.tech/dbname

# Alternative: MongoDB Connection (if using MongoDB Atlas)
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/dbname

# Admin Approval Flow (set to true to enable admin approval UI and require approval for lawyers)
# When false: all lawyers are auto-approved, /admin routes redirect to dashboard
# NEXT_PUBLIC_ENABLE_ADMIN_APPROVALS=false

# File Upload Configuration
# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# Upload Directory (relative to project root) - Only if NOT using Supabase Storage
UPLOAD_DIR=public/uploads/lawyers
